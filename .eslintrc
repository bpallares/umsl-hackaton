{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jest": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "standard",
    "standard-react"
  ],
  "rules": {
    "semi": [
      2,
      "never"
    ],
    "max-len": [
      2,
      120,
      2
    ],
    "generator-star-spacing": 1,
    "jsx-quotes": [
      2,
      "prefer-single"
    ],
    "quote-props": [
      "error",
      "consistent-as-needed"
    ]
  }
}